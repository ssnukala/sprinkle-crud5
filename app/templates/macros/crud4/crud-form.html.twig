{% macro render_form(frmclass,frmid, frmaction,frmmethod) %}
    {% import _self as crmacro %}
    <form method='{{frmmethod | default("post")}}' 
        class="{{ frmclass | default('rs-editform form-inline crud-fieldform') }}"
        {% if frmaction is not empty %} action='{{frmaction}}' {% endif %}
        {% if frmid is not empty %}id='{{frmid}}' {% endif %}>
        {% include "forms/csrf.html.twig" %}
        <div class='editfield'>
        </div>
    <div class="form-group rs-editform-btn">
        <button type="submit" class="btn btn-sm rs-editform-ok btn-success">
            <span class="glyphicon glyphicon-ok" aria-hidden="true"></span>
        </button>
        <button type="reset" class="btn btn-sm rs-editform-cancel btn-warning"
            onClick='genericEditCancel(this);return false;'>
            <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
        </button>
    </div>
    </form>

{% endmacro %}